{
  "name": "minemaster-client",
  "version": "1.0.0",
  "description": "Cross-platform GUI wrapper for crypto mining software",
  "main": "electron/main.js",
  "scripts": {
    "postinstall": "node scripts/download-miners.js",
    "setup": "node scripts/download-miners.js",
    "generate-config": "node scripts/generate-mining-config.js",
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:react": "react-scripts start",
    "start:electron": "electron .",
    "build": "react-scripts build",
    "build:electron": "npm run build && electron-builder",
    "build:all": "npm run build && electron-builder -mwl"
  },
  "build": {
    "appId": "com.minemaster.client",
    "productName": "MineMaster",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "miners/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "miners",
        "to": "miners",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
